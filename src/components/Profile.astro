<style>
  :root {
    --primary-color: #ff4f00;
    --background-color: #000000;
    --foreground-color: #fffdf9;
    --surface-color: #0a0a0a;
    --border-color: #1f1f1f;

    background-color: var(--background-color);
    color: var(--foreground-color);
    font-family: "JetBrains Mono", monospace;
    font-optical-sizing: auto;
    box-sizing: border-box;
  }

  ::selection {
    background: var(--primary-color);
    color: var(--foreground-color);
  }

  body::before,
  :global(body)::before {
    content: "";
    position: fixed;
    inset: 0;
    z-index: -2;
    pointer-events: none;
    background: repeating-linear-gradient(
        to right,
        rgba(255, 255, 255, 0.06) 0px,
        rgba(255, 255, 255, 0.06) 1px,
        transparent 1px,
        transparent 40px
      ),
      repeating-linear-gradient(
        to bottom,
        rgba(255, 255, 255, 0.06) 0px,
        rgba(255, 255, 255, 0.06) 1px,
        transparent 1px,
        transparent 40px
      );
    background-blend-mode: screen;
  }

  .container {
    display: flex;
    justify-content: center;
    font-size: medium;
    line-height: 1.5;
    padding: 1em;
  }

  .profile-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: var(--surface-color);
    border: solid 1px var(--border-color);
    border-radius: 8px;
    max-width: 600px;
    padding: 1em;
    overflow: hidden;
    position: relative;
  }

  .profile-headline-container {
    display: flex;
    gap: 24px;
  }

  .profile-bio-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 12px;
  }

  .profile-bio-container p {
    margin: 0px;
  }

  .profile-picture-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .profile-picture-container img {
    border-radius: 12px;
    width: 200px;
    height: 200px;
    object-fit: cover;
    margin-left: auto;
    margin-right: auto;
    display: block;
    transition:
      width 0.2s,
      height 0.2s,
      box-shadow 0.3s,
      filter 0.3s,
      transform 0.3s;

    border: 2px dashed var(--border-color);
    transform: rotate(0deg) scale(1.01);
  }

  .profile-picture-container img:hover {
    transform: rotate(0deg) scale(1.04);
    cursor: pointer;
    border-color: var(--primary-color);
  }

  .employment-container {
    display: flex;
    justify-content: flex-start;
  }

  .projects-container {
    margin-top: 2em;
    background: var(--surface-color);
    border-radius: 6px;
    border: 1px solid var(--border-color);
    padding: 1em;
  }

  .projects-container h2 {
    margin-top: 0;
    color: var(--primary-color);
    font-size: 1.2em;
  }

  .projects-container ul {
    padding-left: 1.2em;
    margin: 0;
  }

  .projects-container li {
    margin-bottom: 0.7em;
  }

  .project-title {
    transition: border-bottom 0.2s;
  }

  .project-title:hover {
    border-bottom: 2px dashed var(--primary-color);
    cursor: pointer;
  }

  /* Responsive styles */
  @media (max-width: 600px) {
    .container {
      padding: 0 0.5em;
    }
    .profile-container {
      margin-top: 2em;
      padding: 0.5em;
    }
    .profile-headline-container {
      flex-direction: column;
      align-items: center;
      gap: 16px;
      text-align: center;
    }
    .profile-bio-container {
      align-items: center;
      text-align: center;
    }
    .profile-picture-container img {
      width: 240px;
      height: 240px;
    }
    .employment-container {
      justify-content: center;
      text-align: center;
    }
    .projects-container {
      padding: 0.5em;
    }
  }
</style>
